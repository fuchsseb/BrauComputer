{
  "name": "braucomputer",
  "version": "1.0.0",
  "description": "Moderne Brausoftware fÃ¼r macOS mit Rezeptverwaltung, Heizkurven und Brautagebuch",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "./start-dev.sh",
    "dev:react": "BROWSER=none react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "brewing",
    "beer",
    "recipe",
    "macos",
    "electron"
  ],
  "author": "Sebastian",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.0",
    "chart.js": "^4.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.0"
  },
  "build": {
    "appId": "com.braucomputer.app",
    "productName": "BrauComputer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.food-drink",
      "target": "dmg"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
